<table cellpadding='0' border='0' class='borderless'>
	<tr>
		<td valign='top' class='aion_tooltip_icon'>
			<img class='itemicon' src='{ITEM_ICON_LINK}'>
		</td>
		<td class='aion_tooltip' style='position:static;'>
			<table class='aion_tooltip_container'>
				<tr>
					<td class='aion_tooltip_border' style='padding-top:6px;padding-left:6px;'>
						{ITEM_HTML}{DEBUG}
					</td>
					<th class='aion_tooltip_border' style='background-position: right top;'></th>
				</tr>
				<tr>
					<th class='aion_tooltip_border' style='background-position: left bottom;'><div style='height:1px;width:1px'></div></th>
					<th class='aion_tooltip_border' style='background-position: right bottom;'><div style='height:1px;width:1px'></div></th>
				</tr>
			</table>
		</td>
	</tr>
</table>
